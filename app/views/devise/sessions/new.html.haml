.AccountPage
  .AccountPage__title
    %h2 Mynote
    %h5 自分の情報を整理しましょう
    = render "devise/shared/links"
  .AccountPage__form
    = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|
      .FormField
        .FormField__label--normal
          -# = f.label :email
        .FormField__input--normal
          = f.email_field :email, autofocus: true, placeholder: 'メールアドレス'
        .FormField
          .FormField__label--normal
            -# = f.label :password
            -# %i (英数字8文字以上)
          .FormField__input--normal
            = f.password_field :password, autocomplete: "off", placeholder: 'パスワード(英数字8文字以上)'
        .actions
          = f.submit "ログイン", class: 'Button UserButton'

