.page-main
  .main-header
    %p.main-header__new
      = link_to new_note_page_path(@note) do
        = "新規ページ作成"
        = icon('far', 'file-alt')
    = form_with url: search_note_pages_path, html: {class: "main-header__search"}, method: :get, local: true do |f|
      = f.text_field :keyword, class: "main-header__search--box", placeholder: "検索"
      = f.submit "検索", class: "main-header__search--submit"
  %p.main-note
    = @note.name
  .main-pages
    = render @pages
